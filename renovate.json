{
  "extends": [
    "github>graphql-java-kickstart/renovate-config"
  ],
  "packageRules": [
    {
      "description": "Group Kotlin updates together",
      "groupName": "kotlin",
      "matchPackagePrefixes": [
        "org.jetbrains.kotlin"
      ]
    },{
      "description": "Align antlr version with graphql-java",
      "matchPackagePrefixes": [
        "org.antlr"
      ],
      "allowedVersions": "<=4.9.3"
    }
  ]
}
